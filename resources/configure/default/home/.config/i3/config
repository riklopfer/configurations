# intellij
assign [class="jetbrains-idea-ce" title=".*IntelliJ IDEA.*"] $ws4
for_window [class="jetbrains-idea-ce" title=".*IntelliJ IDEA.*"] layout tabbed
for_window [class="jetbrains-idea-ce" instance="sun-awt-X11-XDialogPeer"] floating enable
for_window [class="jetbrains-idea-ce" instance="sun-awt-X11-XDialogPeer"] floating enable

# chromium 
assign [instance="chromium"] $ws1
for_window [instance="chromium"] layout tabbed
for_window [instance="chromium"] border none

# sublime text on ws2
assign [instance="sublime_text"] $ws2
for_window [instance="sublime_text"] layout tabbed

# random pop ups
for_window [instance="gcr-prompter"] focus
for_window [title="Profile error occurred"] floating enable
for_window [class="org-python-util-jython"] floating enbale

# start applications in specific workspaces
exec --no-startup-id i3-msg 'workspace $ws1; exec $browser_command; workspace $ws1'
exec --no-startup-id i3-msg 'workspace $ws2; exec $text_editor_command; workspace $ws1'
exec --no-startup-id i3-msg 'workspace $ws3; exec $terminal_command; workspace $ws1'
exec --no-startup-id i3-msg 'workspace $ws4; exec $ide_command; workspace $ws1'
exec --no-startup-id i3-msg 'workspace $ws5; exec $terminal_command; workspace $ws1'

# back and forth
bindsym $mod+Tab workspace back_and_forth

# focus
focus_on_window_activation focus 
focus_follows_mouse no

# start network manager applet
exec --no-startup-id nm-applet

# start bluetooth manager applet
exec --no-startup-id blueman-applet

# start dropbox
exec --no-startup-id dropbox start

# screen locking
bindsym $windows+Escape exec $lock_command
# THIS IS A VM RIGHT NOW SO NO SCREEN LOCKING
#exec --no-startup-id xautolock -time 10 -locker $lock_command

# from https://faq.i3wm.org/question/3747/enabling-multimedia-keys.1.html
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 1 # decrease screen brightness

